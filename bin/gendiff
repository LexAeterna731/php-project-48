#!/usr/bin/env php
<?php

use function Hexlet\Code\HelpReader\readHelp;
use function Hexlet\Code\DiffGenerator\generateDiff;
use function cli\line;

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';

if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

$doc = readHelp();

$args = Docopt::handle($doc, array('version'=>'Generate diff 1.0'));

$result = generateDiff($args['<firstFile>'], $args['<secondFile>'], $args['--format']);

line($result);